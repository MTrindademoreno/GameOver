<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemGame"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_around_layout"
    android:orientation="vertical"
    android:layout_marginTop="12dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:paddingBottom="6dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/imgItemGame"
        android:layout_width="180dp"
        android:layout_height="96dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:textSize="24sp"
        android:id="@+id/tvTitleGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/imgItemGame"
        app:layout_constraintTop_toBottomOf="@id/imgItemGame"
        tools:text="GAME OVER" />

    <TextView
        android:layout_marginStart="8dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/tvDateGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tvTitleGame"
        app:layout_constraintTop_toBottomOf="@id/tvTitleGame"
        tools:text="1917" />
</LinearLayout>

</com.google.android.material.card.MaterialCardView>